{
    "family": "laravel-test-stack",
    "networkMode": "awsvpc",
    "executionRoleArn": "LaravelEcsTaskExecutionRole",
    "taskRoleArn": "LaravelEcsTaskExecutionRole",
    "cpu": "1024",
    "memory": "2048",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "containerDefinitions": [
        {
            "name": "php",
            "image": "450370295967.dkr.ecr.us-west-1.amazonaws.com/laravel-app:latest",
            "essential": true,
            "memory": 1024,
            "memoryReservation": 512,
            "portMappings": [
                {
                    "containerPort": 9000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "APP_ENV",
                    "value": "development"
                },
                {
                    "name": "APP_DEBUG",
                    "value": "true"
                },
                {
                    "name": "APP_KEY",
                    "value": "base64:KqTIA6NYOlMUR7XAv7G9QXtWJcLvkohj/zEl/7QP0KQ="
                },
                {
                    "name": "APP_NAME",
                    "value": "Laravel"
                },
                {
                    "name": "APP_URL",
                    "value": "http://localhost"
                },
                {
                    "name": "BROADCAST_DRIVER",
                    "value": "log"
                },
                {
                    "name": "CACHE_DRIVER",
                    "value": "file"
                },
                {
                    "name": "DB_CONNECTION",
                    "value": "mysql"
                },
                {
                    "name": "DB_DATABASE",
                    "value": "homestead"
                },
                {
                    "name": "DB_HOST",
                    "value": "127.0.0.1"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "secret"
                },
                {
                    "name": "DB_PORT",
                    "value": "3306"
                },
                {
                    "name": "DB_USERNAME",
                    "value": "homestead"
                },
                {
                    "name": "LOG_CHANNEL",
                    "value": "stderr"
                },
                {
                    "name": "MAIL_DRIVER",
                    "value": "smtp"
                },
                {
                    "name": "MAIL_ENCRYPTION",
                    "value": "null"
                },
                {
                    "name": "MAIL_HOST",
                    "value": "smtp.mailtrap.io"
                },
                {
                    "name": "MAIL_PASSWORD",
                    "value": "null"
                },
                {
                    "name": "MAIL_PORT",
                    "value": "2525"
                },
                {
                    "name": "MAIL_USERNAME",
                    "value": "null"
                },
                {
                    "name": "QUEUE_DRIVER",
                    "value": "sync"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/laravel-test-stack-php",
                    "awslogs-region": "us-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "nginx",
            "image": "450370295967.dkr.ecr.us-west-1.amazonaws.com/nginx:latest",
            "essential": true,
            "memory": 512,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "volumesFrom": [{
                "sourceContainer": "php",
                "readOnly": true
              }],
            "healthCheck": {
                "command": ["CMD-SHELL", "curl -f http://localhost/health || exit 1"],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 120
            },
            "dependsOn": [
                {
                    "containerName": "php",
                    "condition": "START"
                }
            ],
            "environment": [
                {
                    "name": "PHP_FPM_HOST",
                    "value": "localhost"
                },
                {
                    "name": "PHP_FPM_PORT",
                    "value": "9000"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/laravel-test-stack",
                    "awslogs-region": "us-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}