{
    "family": "laravel-test-stack",
    "networkMode": "awsvpc",
    "executionRoleArn": "EcsTaskExecutionRole",
    "cpu": "1024",
    "memory": "2048",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "containerDefinitions": [
        {
            "name": "php",
            "image": "450370295967.dkr.ecr.us-west-1.amazonaws.com/laravel-app",
            "essential": false,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 9000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "APP_ENV",
                    "value": "development"
                },
                {
                    "name": "LOG_CHANNEL",
                    "value": "stderr"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/laravel-test-stack-php",
                    "awslogs-region": "us-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "nginx",
            "image": "nginx:latest",
            "essential": true,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "PHP_FPM_HOST",
                    "value": "localhost"
                },
                {
                    "name": "PHP_FPM_PORT",
                    "value": "9000"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/laravel-test-stack",
                    "awslogs-region": "us-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}